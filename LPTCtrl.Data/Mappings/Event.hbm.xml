<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="LPTCtrl.Data" namespace="LPTCtrl.Data.Domain">
	<class name="Event" table="EVENT" discriminator-value="0">
		<id name="ID" column="ID" type="int">
			<generator class="sequence">
				<param name="sequence">EVENT_ID</param>
			</generator>
		</id>
		<discriminator type="int" formula="case when REPEAT=0 then 0 else 1 end" />
		<property name="Timestamp" column="TS" type="DateTime" not-null="true" />
		<property name="State" column="STATE" type="Boolean" not-null="true" />
		<many-to-one name="Pin" column="PINID" class="Pin" not-null="true" />
		<subclass name="RepeatedEvent" discriminator-value="1">
			<property name="RepeatInterval" column="REPEAT" type="int" />
		</subclass>
	</class>
</hibernate-mapping>
