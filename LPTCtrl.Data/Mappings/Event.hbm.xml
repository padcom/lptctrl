<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="LPTCtrl.Data" namespace="LPTCtrl.Data.Domain">
	<class name="Event" table="EVENT">
		<id name="ID" column="ID" type="int">
			<generator class="native" />
		</id>
		<property name="Timestamp" column="TS" type="DateTime" not-null="true" />
		<property name="RepeatEvery" column="REPEAT" type="int" not-null="true" />
		<property name="State" column="STATE" type="Boolean" not-null="true"/>
		<many-to-one name="Pin" column="PINID" class="Pin" not-null="true" />
	</class>
</hibernate-mapping>
