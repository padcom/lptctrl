<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="LPTCtrl.Data" namespace="LPTCtrl.Data.Domain">
	<class name="Pin" table="PIN" lazy="true">
		<id name="ID" column="ID" type="int">
			<generator class="sequence">
				<param name="sequence">PIN_ID</param>
			</generator>
		</id>
		<property name="Bit" column="BIT" type="int" not-null="true" />
		<property name="Name" column="NAME" type="string"/>
		<many-to-one name="Port" column="PORTID" class="Port" not-null="true" />
		<bag name="Events" cascade="delete" inverse="true" lazy="true">
			<key column="PINID" />
			<one-to-many class="Event" />
		</bag>
	</class>
</hibernate-mapping>
